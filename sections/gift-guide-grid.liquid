{{ 'gift-grid.css' | asset_url | stylesheet_tag }}

<section class="gift-grid">
  <div class="gift-grid-container">
    {% for i in (1..6) %}
      {% assign setting_key = "product_" | append: i %}
      {% assign product_handle = section.settings[setting_key] %}
      {% assign product = all_products[product_handle] %}

      {% if product %}
        <div class="gift-grid-item">
          <img 
            src="{{ product.featured_image | image_url: width: 400 }}" 
            alt="{{ product.title }}" 
            class="gift-grid-image"
          >
          <div class="gift-grid-overlay">
            <h3 class="gift-grid-title">{{ product.title }}</h3>
            <p class="gift-grid-price">{{ product.price | money }}</p>
            <button class="gift-grid-button" data-handle="{{ product.handle }}">
              View Details
            </button>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Gift Product Grid",
  "settings": [
    { "type": "product", "id": "product_1", "label": "Product 1" },
    { "type": "product", "id": "product_2", "label": "Product 2" },
    { "type": "product", "id": "product_3", "label": "Product 3" },
    { "type": "product", "id": "product_4", "label": "Product 4" },
    { "type": "product", "id": "product_5", "label": "Product 5" },
    { "type": "product", "id": "product_6", "label": "Product 6" }
  ],
  "presets": [
    {
      "name": "Gift Product Grid",
      "category": "Custom"
    }
  ]
}
{% endschema %}
