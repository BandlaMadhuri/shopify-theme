{{  'gift-guide-banner.css' | asset_url | stylesheet_tag }}

<section class = "gift-guide-banner" style="background-image: url({{ section.settings.background | image_url}});">
    <div class="gift-guide-content">
        <h1 class="gift-guide-heading">{{  section.settings.heading }}</h1>
        <p class="gift-guide-subheading">{{  section.settings.subtext }}</p>
         {%  if section.settings.button_text !=blank %}
            <a href="{{ section.settings.button_link }}" class="gift-guide-button">
                {{  section.settings.button_text }}
                </a>
            {% endif %}
            </div>
            </section>

            {% schema %}
            { 
              "name": "Gift Guide Banner",
              "settings": [
                {
                "type": "text",
                "id": "heading",
                "label": "Heading",
                "default": "The Gift Guide"
            },
            {
                "type": "text",
                "id": "subtext",
                "label": "Subtext",
                "default": "Find the perfect gifts for your loved ones"
            },
            {
                "type": "url",
                "id": "button_link",
                "label": "Button Link",
            },
            {
                "type": "image_picker",
                "id": "background",
                "label": "Background Image"           
            }
        ],
        "presets": [
            { "name": "Gift Guide Banner",
                "category": "Custom"
            }
        ]
   }
   {% endschema%}